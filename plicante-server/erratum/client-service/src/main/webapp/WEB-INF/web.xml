<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <servlet>
        <servlet-name>ru.petrosoft.erratum.rest.RestApplication</servlet-name>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>RestApplication</param-value>
        </init-param>
    </servlet>
    
    <security-role>
        <role-name>operator</role-name>
    </security-role>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <security-constraint>
        <display-name>Constraints for the operator functionality</display-name>
        <web-resource-collection>
            <web-resource-name>Instance resource</web-resource-name>
            <url-pattern>/instance/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>operator</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
